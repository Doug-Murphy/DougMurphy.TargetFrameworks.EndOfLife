<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net5.0;net6.0</TargetFrameworks>
        <LangVersion>9</LangVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>

        <Version>2.0.0</Version>
        <PackageReleaseNotes>This version incorporates the following changes:
            * Add support to forecast a date when checking if a specific TFM is EOL.
            * Include the EOL date of the TFM when returning the TFM(s) that is/are EOL.
        </PackageReleaseNotes>
        <Authors>Doug Murphy</Authors>
        <Description>This NuGet package provides a simple API for checking if a Target Framework Moniker is, or will be, end of life.</Description>
        <PackageTags>target framework end of life tfm eol</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/Doug-Murphy/DougMurphy.TargetFrameworks.EndOfLife</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Doug-Murphy/DougMurphy.TargetFrameworks.EndOfLife</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.1" Condition="$(TargetFramework) != 'net5.0' AND $(TargetFramework) != 'net6.0'" />
    </ItemGroup>

</Project>
